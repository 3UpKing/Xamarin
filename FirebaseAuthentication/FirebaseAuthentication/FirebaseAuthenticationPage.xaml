<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:FirebaseAuthentication" x:Class="FirebaseAuthentication.FirebaseAuthenticationPage">
    <StackLayout Orientation="Vertical" Padding="20">

        <Entry Placeholder="Email" x:Name="txtEmail" HorizontalOptions="FillAndExpand"/>
          <Entry Placeholder="Password" x:Name="txtPassword" HorizontalOptions="FillAndExpand" IsPassword="true"/>
                <Button Text="Login" Clicked="Login_Cicked" HeightRequest="50" HorizontalOptions="Center"/>

        <Button Text="Register" Clicked="Handle_Clicked" HeightRequest="50" HorizontalOptions="Center"/>

    </StackLayout>
</ContentPage>
